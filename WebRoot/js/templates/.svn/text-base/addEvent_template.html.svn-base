<style>
/* 收缩/展开效果 */
.text {
	line-height: 28px;
	padding: 0 6px;
	color: #666;
}

.box a {
	display: block;
	padding-left: 10px;
	height: 28px;
	line-height: 28px;
	background: #f1f1f1;
	font-weight: bold;
	cursor: pointer
}

.box {
	border: 1px solid #e7e7e7;
}
</style>
<div class="wrapper">
	<div class="first_con" id="first_content" style="display:block">
		<div class="title">
			<h1>添加历史事件</h1>
		</div>
		<div class="add-content">
			<div class="box">
				<img src="images/loading.gif" id="loading" style="display: none;"></img>
				<input type="file" id="file" name="file" /><br /> <input
					type="button" id="upload" value="上传" class="buttonInput"
					style="width:100%;" /><br /> <input type="button" id="reupload"
					value="重新上传" class="buttonInput" style="width:100%;display: none;" /><br />
			</div>
			<div class="box">
				事件名称：<input type="text" id="event_name" class="txtInput"
					style="width:100%;"></input>
			</div>
			<div class="box" id="et"></div>
			<div class="box" id="dl"></div>
			<div class="box" id="pl">
				发生地点：<input type="text" id="tem" class="txtInput"
					style="width:100%;" readonly="readonly" value="请先选择朝代"></input>
			</div>
			<div class="box">
				时间范围：<br /> <input type="text" id="event_start" class="txtInput"
					value="开始时间" onfocus="onTimeStartfocus('event_start')"
					onblur="onTimeStartBlur('event_start')"
					style="float:left; width:49%;"></input> <span
					style="float:left; margin-top:12px; width:2%;">&nbsp-&nbsp</span> <input
					type="text" id="event_end" class="txtInput" value="结束时间"
					onfocus="onTimeEndfocus('event_end')"
					onblur="onTimeEndBlur('event_end')" style="float:left; width:49%;"></input><br />
			</div>
			<div class="box">
				参与人物： <input type="text" id="event_people" class="txtInput"
					style="width:100%;"></input>
			</div>
			<div class="box">
				事件影响： <input type="text" id="event_infu" class="txtInput"
					style="width:100%;"></input>
			</div>
			<div class="box">
				基本信息： <input type="text" id="event_summary" class="txtInput"
					style="width:100%;"></input>
			</div>
			<div clas="box">
				详细介绍： <input type="text" id="event_detail" class="txtInput"
					style="width:100%;"></input>
			</div>
			<div clas="box">
				相关视频： <input type="text" id="event_video" class="txtInput"
					style="width:100%;"></input>
			</div>
		</div>
	</div>
	<div id="boxaa">
		<div class="box" id="event_relation" style="display:none">
			相关事件： <br /> <input type="text" id="event_name2" class="txtInput"
				style="width:70%; float:left;"></input> <input type="button"
				id="queryRe" class="buttonInput" value="查询事件名称"
				style="width:29%; float:left; margin-left:1%;margin-top:5px;"></input>

		</div>
		<div id="rl"></div>
		<div class="box1" id="query_event_relation">

			<div id="add_existing">
				<div class="box2">
					选择事件关联类型： <br /> <select id="existing_event_select"
						class="txtInput" style="width:100%;">
						<option value="1">因果</option>
						<option value="2">包含</option>
						<option value="3">同为子事件</option>
					</select>
				</div>
				<input type="button" id="related_existing_event_submit"
					class="buttonInput"
					style="margin-top: 10px;width: 90%;margin-left: 10px;"
					value="添加搜索事件"></input>
			</div>
			<div class="box3">
				<input type="button" id="open_related_new_event_submit"
					class="buttonInput"
					style="margin-top: 10px;width: 90%;margin-left: 10px;"
					value="点击添加新事件"></input>

				<div class="box4" id="add_new">
					选择事件关联类型： <br /> <select id="new_event_select" class="txtInput"
						style="width:100%;">
						<option value="1">因果</option>
						<option value="2">包含</option>
						<option value="3">同为子事件</option>
					</select> <input type="button" id="related_new_event_submit"
						class="buttonInput"
						style="margin-top: 10px;width: 90%;margin-left: 10px;" value="添加"></input>
				</div>
			</div>
		</div>
	</div>
	<div class="thrid_content" id="thrid_content" style="display:block">
		<input type="button" id="event_submit" class="buttonInput" style="margin-top:10px; width:100%;" value="提交"></input>
	</div>
	<input type="button" id="event_cancel" class="buttonInput" style="margin-top:10px; width:100%;" value="取消"></input>

</div>
